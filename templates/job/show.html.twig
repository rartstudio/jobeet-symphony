{% extends 'base.html.twig' %}

{% block body %}
    <h1>Job</h1>
    <div>
        <div>
            <div>
                <div>
                    <h3>{{job.company}} | {{job.location}}</h3>
                </div>
                <div>
                    <i>posted on {{job.createdAt|date('m/d/Y')}}</i>
                </div>
            </div>
            <p>
                {{ job.position }}|{{ job.type }}
            </p>
            <p>
                {{ job.description|nl2br }}
            </p>
            <p>
                how to apply
            </p>
            <p>
                {{ job.howToApply }}
            </p>
            <div>
                <div>
                    <a href="{{path('job.list')}}">
                        Back To List
                    </a>
                    <a>
                        Edit
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}